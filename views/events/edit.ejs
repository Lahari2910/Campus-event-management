
<h2>Edit Event</h2>
<form action="/admin/events/<%= event.id %>?_method=PUT" method="POST">
  <label>Title:</label><input type="text" name="title" value="<%= event.title %>" required><br>
  <label>Description:</label><textarea name="description"><%= event.description %></textarea><br>
  <label>Date:</label><input type="date" name="date" value="<%= event.date.toISOString().split('T')[0] %>" required><br>
  <label>Time:</label><input type="time" name="time" value="<%= event.time %>" required><br>
  <label>Venue:</label><input type="text" name="venue" value="<%= event.venue %>"><br>
  <button type="submit">Update Event</button>
</form>

<a href="/admin/events">Back to Events</a>